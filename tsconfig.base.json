{
  "compilerOptions": {
    // module
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node10",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    // Lib
    "lib": [],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    // Strict
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // Misc
    "importHelpers": true,
    "newLine": "lf"
  },
  "exclude": [
    "dist",
    "coverage"
  ]
}
